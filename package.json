{
  "name": "task-templates",
  "version": "0.0.0-semantic-release",
  "description": "Reusable Task templates",
  "engines": {
    "node": ">=12.0",
    "yarn": ">=1.17"
  },
  "devDependencies": {
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/gitlab": "^12.0.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "semantic-release": "^21.0.0"
  },
  "scripts": {
    "commit": "cz --signoff"
  },
  "release": {
    "branches": ["main", "master"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/gitlab",
        {
          "assets": [
            {
              "path": "Taskfile.d/*.yml"
            }
          ]
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ttps://gitlab.com/op_so/task/task-templates.git"
  },
  "author": "FX Soubirou",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/op_so/task/task-templates/issues"
  },
  "homepage": "https://gitlab.com/op_so/task/task-templates"
}
